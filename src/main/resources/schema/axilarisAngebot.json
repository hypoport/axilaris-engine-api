{
  "angebot": {
    "type": "object",
    "properties": {
      "produktanbieter": {
        "type": "string"
      },
      "produktbezeichnung": {
        "type": "string"
      },
      "angebotsvariantentyp": {
        "description": "Identifier der es dem Client ermöglicht das Angebot gezielt abzuschliessen. Nicht das konkrete Angebot wird identifiziert, sondern das konkrete Produkt eines Produktanbieters.",
        "type": "string"
      },
      "kreditkonditionen": {
        "type": "object",
        "properties": {
          "effektivzinssatz": {
            "$ref": "axilarisDefinitions.json#/percent"
          },
          "sollzinssatz": {
            "$ref": "axilarisDefinitions.json#/percent"
          },
          "gesamtbetrag": {
            "description": "Auszahlungsbetrag + Versicherungsprämie + Zinsen",
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "nettokreditbetrag": {
            "description": "Auszahlungsbetrag + Versicherungsprämie",
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "auszahlungsbetrag": {
            "description": "Kreditbetrag",
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "laufzeitInMonaten": {
            "type": "integer"
          },
          "rateProMonat": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "letzteRate": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "provision": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "basisbetragFuerDieProvisionsermittlung": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "europaceNutzungsgebuehr": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "produktanbieterZahltEuropaceNutzungsgebuehr": {
            "type": "boolean"
          },
          //         TODO JSa
          "vorlaufzinsenProTag": {
            "$ref": "axilarisDefinitions.json#/EUR"
          }
        },
        "required": [
          "effektivzinssatz",
          "sollzinssatz",
          "gesamtbetrag",
          "nettokreditbetrag",
          "auszahlungsbetrag",
          "laufzeitInMonaten",
          "rateProMonat",
          "letzteRate",
          "provision",
          "basisbetragFuerDieProvisionsermittlung",
          "europaceNutzungsgebuehr",
          "produktanbieterZahltEuropaceNutzungsgebuehr",
          "vorlaufzinsenProTag"
        ],
        "additionalProperties": false
      },
      "versicherungskonditionen": {
        "type": "object",
        "properties": {
          "basisFuerDieProvisionsermittlung": {
            "enum": [
              "VERSICHERUNGS_PRAEMIE_NETTO",
              "VERSICHERUNGS_PRAEMIE_BRUTTO"
            ]
          },
          "versicherungsprovision": {
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "versicherungspraemieBrutto": {
            "description": "Versicherungsprämie inklusive Steuer für Arbeitslosigkeitsversicherung",
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "versicherungspraemieNetto": {
            "description": "Versicherungsprämie exklusive Steuer für Arbeitslosigkeitsversicherung",
            "$ref": "axilarisDefinitions.json#/EUR"
          },
          "versicherungsrisiken": {
            "$ref": "axilarisDefinitions.json#/versicherungsrisiken"
          },
          "versicherer": {
            "type": "string"
          },
          "europaceNutzungsgebuehr": {
            "$ref": "axilarisDefinitions.json#/EUR"
          }
        },
        "required": [
          "basisFuerDieProvisionsermittlung",
          "versicherungsprovision",
          "versicherungspraemieBrutto",
          "versicherungspraemieNetto",
          "versicherungsrisiken",
          "versicherer",
          "europaceNutzungsgebuehr"
        ],
        "additionalProperties": false
      },
      "status": {
        "type": "object",
        "properties": {
          "machbarkeitsstatus": {
            "enum": [
              "MACHBAR",
              "MACHBAR_UNTER_VORBEHALT_PRODUKTANBIETER",
              "NICHT_MACHBAR"
            ]
          },
          "angepasst": {
            "description": "true wenn der Kredit- oder Versicherungswunsch des Antragstellers angepasst wurde.",
            "type": "boolean"
          }
        },
        "required": [
          "machbarkeitsstatus",
          "angepasst"
        ],
        "additionalProperties": false
      },
      "meldungen": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "kategorie": {
              "enum": [
                "MACHBARKEIT",
                "VOLLSTAENDIGKEIT",
                "HINWEIS",
                "ANPASSUNG"
              ]
            },
            "text": {
              "type": "string"
            },
            "code": {
              "type": "string"
            }
          },
          "required": [
            "kategorie",
            "text",
            "code"
          ],
          "additionalProperties": false
        }
      },
      "erforderlicheUnterlagen": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "bonitaetscheck": {
        "type": "object",
        "properties": {
          "einnahmen": {
            "$ref": "#/bonitaetscheckPosition"
          },
          "ausgaben": {
            "$ref": "#/bonitaetscheckPosition"
          },
          "ueberschuss": {
            "$ref": "axilarisDefinitions.json#/EUR"
          }
        },
        "required": [
          "einnahmen",
          "ausgaben",
          "ueberschuss"
        ],
        "additionalProperties": false
      },
      "maximalerAuszahlungsbetrag": {
        "$ref": "axilarisDefinitions.json#/EUR"
      }
    },
    "required": [
      "produktanbieter",
      "produktbezeichnung",
      "angebotsvariantentyp",
      "kreditkonditionen",
      "status",
      "bonitaetscheck"
    ],
    "additionalProperties": false
  },
  "bonitaetscheckPosition": {
    "type": "object",
    "properties": {
      "positionen": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string"
            },
            "wert": {
              "$ref": "axilarisDefinitions.json#/EUR"
            }
          },
          "required": [
            "label",
            "wert"
          ],
          "additionalProperties": false
        }
      },
      "summe": {
        "$ref": "axilarisDefinitions.json#/EUR"
      }
    },
    "required": [
      "positionen",
      "summe"
    ],
    "additionalProperties": false
  }
}